{ 
	"version": "0.1.0",
	"tasks": [
        {
			"taskName": "build",
       		"command": "${workspaceRoot}/node_modules/typescript/bin/tsc",
			"isShellCommand": true,
    		"args": ["-w", "-p", "."],
			"showOutput": "silent",	
			"isBuildCommand": true,
